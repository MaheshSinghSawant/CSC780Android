<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home_screen" tools:context=".HomeScreen">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:textSize="15dp"
        android:textColor="#006064"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_time"
        android:format="%s"
        android:textSize="90sp"
        android:textColor="#006064"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"

        android:text="00:00:00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/step_count"
        android:fontFamily="sans-serif"
        android:textSize="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="#006064"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="215dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/step_count_steps"
        android:fontFamily="sans-serif"
        android:textSize="18dp"
        android:textColor="#006064"
        android:text="steps"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="225dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kcal"
        android:fontFamily="sans-serif"
        android:textSize="30dp"
        android:textColor="#006064"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="168dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_kcal"
        android:fontFamily="sans-serif"
        android:textSize="18dp"
        android:textColor="#006064"
        android:text="kcal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="175dp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#006064"
        android:layout_marginTop="140dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#006064"
        android:layout_below="@+id/steps_icon"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#006064"
        android:layout_alignParentTop="true"
        android:layout_marginTop="360dp"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/calories_burnt_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        fancy:fb_fontIconResource="&#xf0e7;"
        fancy:fb_iconPosition="left"
        fancy:fb_fontIconSize ="40dp"
        fancy:fb_radius="30dp"
        fancy:fb_textColor="#FFC107"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        fancy:fb_defaultColor="#00ffffff"
        />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/steps_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        fancy:fb_fontIconResource="&#xf1b0;"
        fancy:fb_iconPosition="left"
        fancy:fb_fontIconSize ="40dp"
        fancy:fb_radius="30dp"
        fancy:fb_textColor="#607D8B"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        fancy:fb_defaultColor="#00ffffff"
        />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/pause_timer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        fancy:fb_defaultColor="#607D8B"
        fancy:fb_focusColor="#313131"
        fancy:fb_fontIconResource="&#xf04c;"
        fancy:fb_fontIconSize ="50dp"
        fancy:fb_iconPaddingLeft="0dp"
        fancy:fb_iconPaddingRight="0dp"
        fancy:fb_radius="64dp"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:onClick="showOther"
        android:tag="PAUSE"
        />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/play_timer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        fancy:fb_defaultColor="#C0CA33"
        fancy:fb_focusColor="#313131"
        fancy:fb_fontIconResource="&#xf04b;"
        fancy:fb_fontIconSize ="50dp"
        fancy:fb_iconPaddingLeft="10dp"
        fancy:fb_iconPaddingRight="0dp"
        fancy:fb_radius="64dp"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:tag="PLAY"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/stop_timer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        fancy:fb_defaultColor="#ed4037"
        fancy:fb_focusColor="#313131"
        fancy:fb_fontIconResource="&#xf04d;"
        fancy:fb_fontIconSize ="20dp"
        fancy:fb_iconPaddingLeft="0dp"
        fancy:fb_iconPaddingRight="0dp"
        fancy:fb_radius="64dp"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="120dp"
        android:tag="STOP"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mapsicon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/maps_icon"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="250dp"
        android:elevation="5dp"
        android:onClick="goToMap"

        />




    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/activity_run"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        fancy:fb_defaultColor="#006064"
        fancy:fb_focusColor="#313131"
        fancy:fb_fontIconResource="&#xf21d;"
        fancy:fb_fontIconSize ="30dp"
        fancy:fb_iconPaddingLeft="0dp"
        fancy:fb_iconPaddingRight="0dp"
        fancy:fb_radius="64dp"
        fancy:fb_textColor="#FFFFFF"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="30dp"
        android:onClick="showRunning"
        />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/activity_walk"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        fancy:fb_defaultColor="#006064"
        fancy:fb_focusColor="#313131"
        fancy:fb_fontIconResource="&#xf183;"
        fancy:fb_fontIconSize ="30dp"
        fancy:fb_iconPaddingLeft="0dp"
        fancy:fb_iconPaddingRight="0dp"
        fancy:fb_radius="64dp"
        fancy:fb_textColor="#FFFFFF"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="140dp"
        android:onClick="showWalking"
        />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/activity_bicycle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        fancy:fb_defaultColor="#006064"
        fancy:fb_focusColor="#313131"
        fancy:fb_fontIconResource="&#xf206;"
        fancy:fb_fontIconSize ="30dp"
        fancy:fb_iconPaddingLeft="0dp"
        fancy:fb_iconPaddingRight="0dp"
        fancy:fb_radius="64dp"
        fancy:fb_textColor="#FFFFFF"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="250dp"
        android:onClick="showBicycle"
        />

</RelativeLayout>
