<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home_screen" tools:context=".HomeScreen">

    <Chronometer
        android:id="@+id/chronometer"
        android:format="%s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="120sp"
        android:textColor="#006064"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/step_count"
        android:fontFamily="sans-serif"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/chronometer"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_select_activity"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#006064"
        fancy:fb_focusColor="#0097A7"
        fancy:fb_fontIconResource="&#xf1e3;"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="SELECT AN ACTIVITY"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:onClick="showActivities"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/calories_burnt_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        fancy:fb_fontIconResource="&#xf0e7;"
        fancy:fb_iconPosition="left"
        fancy:fb_fontIconSize ="40dp"
        fancy:fb_radius="30dp"
        fancy:fb_textColor="#FFC107"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="33dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        fancy:fb_defaultColor="#00ffffff"
        />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/steps_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        fancy:fb_fontIconResource="&#xf21d;"
        fancy:fb_iconPosition="left"
        fancy:fb_fontIconSize ="40dp"
        fancy:fb_radius="30dp"
        fancy:fb_textColor="#795548"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        fancy:fb_defaultColor="#00ffffff"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/speed_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        fancy:fb_fontIconResource="&#xf0e4;"
        fancy:fb_iconPosition="left"
        fancy:fb_fontIconSize ="40dp"
        fancy:fb_radius="30dp"
        fancy:fb_textColor="#607D8B"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        fancy:fb_defaultColor="#00ffffff"
        />



    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/heartbeat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        fancy:fb_fontIconResource="&#xf21e;"
        fancy:fb_iconPosition="left"
        fancy:fb_fontIconSize ="40dp"
        fancy:fb_radius="30dp"
        fancy:fb_textColor="#B71C1C"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        fancy:fb_defaultColor="#00ffffff"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/pause_timer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        fancy:fb_defaultColor="#607D8B"
        fancy:fb_focusColor="#313131"
        fancy:fb_fontIconResource="&#xf04b;"
        fancy:fb_fontIconSize ="50dp"
        fancy:fb_iconPaddingLeft="10dp"
        fancy:fb_iconPaddingRight="0dp"
        fancy:fb_radius="64dp"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:onClick="showOther"
        />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/play_timer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        fancy:fb_defaultColor="#C0CA33"
        fancy:fb_focusColor="#313131"
        fancy:fb_fontIconResource="&#xf04b;"
        fancy:fb_fontIconSize ="50dp"
        fancy:fb_iconPaddingLeft="10dp"
        fancy:fb_iconPaddingRight="0dp"
        fancy:fb_radius="64dp"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/stop_timer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        fancy:fb_defaultColor="#ed4037"
        fancy:fb_focusColor="#313131"
        fancy:fb_fontIconResource="&#xf04d;"
        fancy:fb_fontIconSize ="20dp"
        fancy:fb_iconPaddingLeft="0dp"
        fancy:fb_iconPaddingRight="0dp"
        fancy:fb_radius="64dp"
        fancy:fb_textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="120dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mapsicon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/mapbutn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="250dp"
        android:elevation="5dp"
        android:onClick="goToMap"

        />



</RelativeLayout>
