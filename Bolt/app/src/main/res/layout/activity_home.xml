<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.google.android.gms.fit.samples.bolt.Home">




    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src= "@drawable/map_icon"
        android:onClick="showMap"
        android:background="#00ffffff"
        android:id="@+id/map"
        android:layout_below="@+id/stop_timer"
        android:layout_alignRight="@+id/stop_timer"
        android:layout_alignEnd="@+id/stop_timer"
        android:layout_marginTop="69dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/play"
        android:id="@+id/play_timer"
        android:layout_gravity="bottom"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/stop_timer"
        android:layout_toLeftOf="@+id/chronometer"
        android:layout_toStartOf="@+id/chronometer" />

    <Chronometer
        android:id="@+id/chronometer"
        android:format="%s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/stop"
        android:id="@+id/stop_timer"
        android:layout_gravity="bottom"
        android:background="#00ffffff"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/chronometer"
        android:layout_toRightOf="@+id/chronometer"
        android:layout_toEndOf="@+id/chronometer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showgooglefit"
        android:text="Show Google Fit Activity"
        android:onClick="showGoogleFitActivity"

        android:layout_below="@+id/map"
        android:layout_alignStart="@+id/play_timer" />

</RelativeLayout>
